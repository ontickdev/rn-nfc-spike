{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "rootDir": "src/",
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./",

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
  },
  "include": ["src"],
}